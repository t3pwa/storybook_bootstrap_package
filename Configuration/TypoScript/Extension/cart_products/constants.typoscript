#cartproducts constants
plugin.tx_cartproducts {
    view {
        #templateRootPath = EXT:cart_products/Resources/Private/Templates/
        templateRootPath = EXT:site_package/Resources/Private/Templates/Extension/cart_products/

        #partialRootPath = EXT:cart_products/Resources/Private/Partials/
        partialRootPath = EXT:site_package/Resources/Private/Partials/Extension/cart_products/

        #layoutRootPath = EXT:cart_products/Resources/Private/Layouts/
        layoutRootPath = EXT:site_package/Resources/Private/Layouts/Extension/cart_products/
    }

    persistence {
        storagePid = 5
        recursive = 1
    }

    settings {
#        cart {
#            pid = 0
#            isNetCart = 0
#        }

#        order {
#            pid = 0
#        }

        format.currency {
            currencySign       = &euro;
            decimalSeparator   = ,
            thousandsSeparator = .
            prependCurrency    = false
            separateCurrency   = true
            decimals           = 2
        }
    }
}
